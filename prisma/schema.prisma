datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id_usuario   Int     @id @default(autoincrement())
  nombre       String
  correo       String  @unique
  contrasena  String  
  puntos       Int     @default(0)
}

model Restaurante {
  id_restaurante Int    @id @default(autoincrement())
  nombre_restaurante  String?
  descripcion    String
  link_menu      String?
  ubicacion      String?
}



